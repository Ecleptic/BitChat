<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip"
                    android:color="@color/primary_material_light"/>
            <gradient android:angle="-90"
                      android:endColor="@color/primary_material_light"
                      android:startColor="@color/primary_material_light"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip"
                    android:color="@color/primary_material_light"/>
            <solid android:color="@color/primary_material_light"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip"
                    android:color="@color/primary_material_light"/>
            <gradient android:angle="-90"
                      android:endColor="@color/primary_material_light"
                      android:startColor="#8dbab3"/>
        </shape>
    </item>
</selector>